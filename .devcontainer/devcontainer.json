{
  "name": "MCP.run Development Environment",
  "image": "mcr.microsoft.com/devcontainers/go",
  "postCreateCommand": "curl -s https://static.dylibso.com/cli/install.sh | bash",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "tamasfe.even-better-toml"
